{% block footer %}
  <div class="{{ container }}" >
    {% if page.footer_first %}
      <div class="site-footer__first">
        {{ page.footer_first }}
      </div>
    {% endif %}
    {% if page.footer_end %}
      <div class="site-footer__bottom">
        {{ page.footer_end }}
      </div>
    {% endif %}
  </div>
{% endblock %}
