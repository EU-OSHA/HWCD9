{% extends "@bootstrap_barrio/layout/page.html.twig" %}

{% block head %}

  <header id="navbar" class="{{ navbar_classes }} campaigns-header">
    <div class="top-header-container">
      <div class="top-header-content row">
        <div class="header-logo col-xs-12 col-sm-9 toolbar-yes">
          {{ page.top_header_logos }}
          <div class="header-text">Healthy Workplaces Lighten the Load 2020-22</div>
        </div>
        <div class="header-tools col-xs-12 col-sm-3 xs-menu">
          <div class="print-resize-block">
            {{ page.header_form.hwcprintfriendly }}
            {{ page.header_form.textresize }}
            <div id="block-on-the-web-0" class="block block-on-the-web contextual-links-region">
                <span class="on-the-web otw-twitter otw-0">
                    <a href="https://twitter.com/eu_osha" title="Twitter" target="_blank">
                        <img typeof="foaf:Image" class="img-responsive" src="https://test.healthy-workplaces.eu/sites/all/themes/hwc_frontend/images/social_icons/sm/twitter.png" alt="Find EU-OSHA on Twitter" title="Twitter" />
                    </a>
                </span>
              <span class="on-the-web otw-facebook otw-1">
                    <a href="https://www.facebook.com/EuropeanAgencyforSafetyandHealthatWork" title="Facebook" target="_blank">
                        <img typeof="foaf:Image" class="img-responsive" src="https://test.healthy-workplaces.eu/sites/all/themes/hwc_frontend/images/social_icons/sm/facebook.png" alt="Find EU-OSHA on Facebook" title="Facebook" />
                    </a>
                </span>
              <span class="on-the-web otw-linkedin otw-2">
                    <a href="https://www.linkedin.com/company/european-agency-for-safety-and-health-at-work" title="LinkedIn" target="_blank">
                        <img typeof="foaf:Image" class="img-responsive" src="https://test.healthy-workplaces.eu/sites/all/themes/hwc_frontend/images/social_icons/sm/linkedin.png" alt="Find EU-OSHA on LinkedIn" title="LinkedIn" />
                    </a>
                </span>
              <span class="on-the-web otw-youtube otw-3">
                    <a href="https://www.youtube.com/user/EUOSHA" title="Youtube" target="_blank">
                        <img typeof="foaf:Image" class="img-responsive" src="https://test.healthy-workplaces.eu/sites/all/themes/hwc_frontend/images/social_icons/sm/youtube.png" alt="Find EU-OSHA on YouTube" title="Youtube" />
                    </a>
                </span>
              <span class="on-the-web otw-flickr otw-4">
                    <a href="https://www.flickr.com/photos/euosha/albums" title="Flickr" target="_blank">
                        <img typeof="foaf:Image" class="img-responsive" src="https://test.healthy-workplaces.eu/sites/all/themes/hwc_frontend/images/social_icons/sm/flickr.png" alt="Find EU-OSHA on Flickr" title="Flickr" />
                    </a>
                </span>
              <span class="on-the-web otw-slideshare otw-5">
                    <a href="https://www.slideshare.net/EUOSHA" title="Slideshare" target="_blank">
                        <img typeof="foaf:Image" class="img-responsive" src="https://test.healthy-workplaces.eu/sites/all/themes/hwc_frontend/images/social_icons/sm/slideshare.png" alt="Find EU-OSHA on SlideShare" title="Slideshare" />
                    </a>
                </span>
            </div>


          </div>
          <div class="search-block">
            {{ page.header_form.searchform }}
            {{ page.header_form.privateworkbenchblock  }}
{#            {{ dd( page.header_form.privateworkbenchblock ) }}#}
          </div>
          <div class="header-language-search">
            {{ page.header_form.languagedropdownswitchercontent }}
          </div>


          <div class="content-first-row">

            {#              <div class="header-social-menu">#}
            {#                {{ page.header }}#}
            {#              </div>#}
            {#            </div>#}
            {#            <div class="header-links">#}
            {#              {{ page.header_links}}#}
            {#            </div>#}
          </div>
        </div>
      </div>
      <nav{{ navbar_attributes }}>
        {% if page.primary_menu %}
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#CollapsingNavbar" aria-controls="CollapsingNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="collapse navbar-collapse" id="CollapsingNavbar">
            {{ page.primary_menu }}
          </div>
        {% endif %}
        {% if sidebar_collapse %}
          <button class="navbar-toggler navbar-toggler-left collapsed" type="button" data-toggle="collapse" data-target="#CollapsingLeft" aria-controls="CollapsingLeft" aria-expanded="false" aria-label="Toggle navigation"></button>
        {% endif %}
      </nav>
  </header>
{% endblock %}


{% block content %}
  <div class="main-container">
    <section class="section-title">
      {{ page.breadcrumb.hwc_theme_breadcrumbs }}
      <h1 class="page-header">{{ page.breadcrumb.hwc_theme_page_title }}</h1>
    </section>

    <div class="container">
      <div class="row">
        <aside class="section col-12 col-lg-3 sidebar-first" role="complementary">
          {{ page.sidebar_first }}
        </aside>
        <section class="section">
          {{ page.content }}
        </section>
        <aside class="section col-12 col-lg-3 sidebar-second" role="complementary">
          {{ page.sidebar_second }}
        </aside>
      </div>
    </div>
  </div>





{% endblock %}

{% block footer %}
  <div class="{{ container }}" >
    {% if page.footer_first %}
      <div class="site-footer__first">
        {{ page.footer_first }}
      </div>
    {% endif %}
    {% if page.footer_end %}
      <div class="site-footer__bottom">
        {{ page.footer_end }}
      </div>
    {% endif %}
  </div>
{% endblock %}
